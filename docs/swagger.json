  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "contact": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "phoneNumber",
          "contactType",
          "userId"
        ],
        "properties": {
          "_id": {
            "description": "Contact's id",
            "type": "string",
            "example": "669ff3916f9d6d7ed25f7480"
          },
          "name": {
            "description": "Contact's name",
            "type": "string",
            "example": "Andriy Pavlenko"
          },
          "phoneNumber": {
            "description": "Contact's phoneNumber",
            "type": "string",
            "example": "+3800000000010"
          },
          "email": {
            "description": "Contact's email",
            "type": "string",
            "example": "dave_1@gmail.com"
          },
          "isFavourite": {
            "description": "Whether is contact a favorite",
            "type": "boolean",
            "default": false,
            "example": false
          },
          "contactType": {
            "description": "Type of contact",
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "default": "personal",
            "example": "personal"
          },
          "photo": {
            "description": "Link to contact's photo",
            "type": "string",
            "example": "https://res.cloudinary.com/uqwgdu/image/upload/image.png"
          },
          "userId": {
            "description": "Contact's user id",
            "type": "string",
            "example": "66b8d580cc975a8886ddc6f0"
          },
          "createdAt": {
            "description": "Time when the contact was added",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-13T16:43:42"
          },
          "updatedAt": {
            "description": "Time when the contact was last updated",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-13T20:40:28"
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "UnauthorizedError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
